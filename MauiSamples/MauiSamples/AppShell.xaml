<?xml version="1.0" encoding="UTF-8" ?>
<Shell
  x:Class="MauiSamples.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:views="clr-namespace:MauiSamples.Views"
  Shell.FlyoutBehavior="Disabled">

  <TabBar>
    <Tab Title="Home">
      <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    </Tab>
    <Tab Title="Address">
      <ShellContent
        Title="MVVM Goodness"
        ContentTemplate="{DataTemplate views:AddressPage}"
        Route="MvvmSample" />
    </Tab>
    <Tab Title="Bindings">
      <ShellContent
        Title="Bindings"
        ContentTemplate="{DataTemplate views:BindingsPage}"
        Route="Bindings" />
    </Tab>
    <Tab Title="Video">
      <ShellContent
        Title="Video"
        ContentTemplate="{DataTemplate views:VideoPage}"
        Route="Video" />
    </Tab>
    <Tab Title="Events">
      <ShellContent
        Title="Events"
        ContentTemplate="{DataTemplate views:EventsPage}"
        Route="Event" />
    </Tab>
    <Tab Title="Reel">
      <ShellContent 
        Title="Reel"
        ContentTemplate="{DataTemplate views:ReelPage}"
        Route="Reel" />
    </Tab>
  </TabBar>

</Shell>
